{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<div class = "backshow">
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ category.picture }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('app_category_index') }}">back to list</a>

    <a class="btn btn-warning " href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>

    {{ include('category/_delete_form.html.twig') }}
</div>
{% endblock %}
