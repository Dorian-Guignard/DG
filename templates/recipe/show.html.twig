{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
<div class = "backshow" "border_form">
    <h1>Recipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recipe.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recipe.description }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ recipe.duration }}</td>
            </tr>
            <tr>
                <th>HeatTime</th>
                <td>{{ recipe.heatTime }}</td>
            </tr>
            <tr>
                <th>PrepTime</th>
                <td>{{ recipe.prepTime }}</td>
            </tr>
            <tr>
                <th>Portion</th>
                <td>{{ recipe.portion }}</td>
            </tr>
            <tr>
                <th>Steps</th>
                <td>
                    {% for step in recipe.steps %}
                    {{ step.getName() }}. {{ step.content }}<br>
                    {% endfor %}
                </td>
                <tr>
                 <th>Ingredients</th>
                 <td>
                    {% for compositions in recipe.compositions %}
                    {{ compositions.food }}<br>
                    {% endfor %}
                </td>               
                </tr>
            <tr>
                <th>Picture</th>
                <td>{{ recipe.picture }}</td>
            </tr>

            <tr>
                <th>Image</th>
                <td>{{ recipe.nameImage }}</td>
            </tr>

        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('app_recipe_index') }}">back to list</a>

    <a class="btn btn-warning " href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">edit</a>

    {{ include('recipe/_delete_form.html.twig') }}
</div>
{% endblock %}
