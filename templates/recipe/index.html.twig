{% extends 'base.html.twig' %}

{% block title %}Recipe index{% endblock %}

{% block body %}
<div class="backshow">
    <h1>Recipe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Duration</th>
                <th>HeatTime</th>
                <th>PrepTime</th>
                <th>Portion</th>
                <th>Picture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.id }}</td>
                <td>{{ recipe.name }}</td>
                <td>{{ recipe.description }}</td>
                <td>{{ recipe.duration }}</td>
                <td>{{ recipe.heatTime }}</td>
                <td>{{ recipe.prepTime }}</td>
                <td>{{ recipe.portion }}</td>
                <td>{{ recipe.picture }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_recipe_show', {'id': recipe.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_recipe_new') }}">Create new</a>
</div>
{% endblock %}
